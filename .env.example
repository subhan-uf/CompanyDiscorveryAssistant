# Copy to .env and adjust as needed

# PostgreSQL connection string
DATABASE_URL=postgres://postgres:postgres@localhost:5432/smartassistant?sslmode=disable

# Flask service URL
FLASK_URL=http://localhost:5000

# Go server port
PORT=8080

# Flask service specific
# Ollama (free local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBED_MODEL=nomic-embed-text
OLLAMA_CHAT_MODEL=llama3.1:8b
# Set to false to skip local Ollama entirely
OLLAMA_ENABLED=false

# Optional: OpenAI for embeddings + generation
# OPENAI_API_KEY=sk-...
# FLASK_HOST=0.0.0.0
# FLASK_PORT=5000

# Optional: Hosted alternatives (no local models required)
# GROQ_API_KEY=grq_...
# TOGETHER_API_KEY=...
# COHERE_API_KEY=...
